# ASP.NET Core Environment
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:8080;https://+:8081

# Database Connection
# Format: Host=<hostname>;Port=<port>;Database=<database>;Username=<user>;Password=<password>
ConnectionStrings__DefaultConnection=Host=postgres;Port=5432;Database=syncdb;Username=syncuser;Password=syncpass

# Logging Configuration
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft.AspNetCore=Warning
Logging__LogLevel__Quartz=Warning
Logging__LogLevel__Infrastructure.Quartz=Warning

# Quartz Scheduler Configuration
Quartz__TablePrefix=quartz.qrtz_
Quartz__PerformSchemaValidation=true
Quartz__WaitForJobsToComplete=true
Quartz__MaxConcurrency=5
Quartz__MisfireThresholdSeconds=60
Quartz__EnableClustering=false
Quartz__ClusterCheckinIntervalSeconds=20
Quartz__ClusterMisfireThresholdSeconds=30

# Allowed Hosts
AllowedHosts=*

